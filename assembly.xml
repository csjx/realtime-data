<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>pacioos</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>pacioos</baseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>bin/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>src/matlab/+edu/*</include>
        <include>src/matlab/schedule*m</include>
        <include>lib/matlab/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>conf/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>docs/dev/design/rbnb-drivers-class-diagram.png</include>
        <include>docs/user/*pdf</include>
      </includes>
      <excludes>
        <exclude>docs/user/Python*pdf</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>src/matlab/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/bbl-1.0.0-SNAPSHOT-jar-with-dependencies.jar</source>
    </file>
    <file>
      <source>LICENSE</source>
    </file>
  </files>
</assembly>