<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>realtime-data</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>scripts/shell</outputDirectory>
      <includes>
        <include>manage-instruments</include>
      </includes>
    </fileSet>
    <fileSet>
        <directory>target/site</directory>
        <outputDirectory>docs/dev/apidocs</outputDirectory>
        <includes>
          <include>apidocs/**</include>
        </includes>
    </fileSet>
    <fileSet>     
      <directory>src</directory>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>matlab/+edu/**</include>
        <include>matlab/schedule*m</include>
      </includes>
    </fileSet>
    <fileSet>     
      <directory>lib</directory>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>matlab/+edu/*</include>
        <include>matlab/schedule*m</include>
        <include>matlab/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>conf/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>docs/dev/design/rbnb-drivers-class-diagram.png</include>
        <include>docs/user/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/realtime-data-1.4.2-jar-with-dependencies.jar</source>
    </file>
    <file>
      <source>LICENSE</source>
    </file>
  </files>
</assembly>